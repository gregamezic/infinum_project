<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_padding">

    <ImageView
        android:id="@+id/image_show_item"
        android:layout_width="160dp"
        android:layout_height="225dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        tools:src="@drawable/icon_tbbt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_shows_title_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="The big bang theory"
        android:textColor="@color/text_light"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/image_show_item"
        app:layout_constraintLeft_toLeftOf="@+id/image_show_item"
        app:layout_constraintRight_toRightOf="@+id/image_show_item" />

</androidx.constraintlayout.widget.ConstraintLayout>