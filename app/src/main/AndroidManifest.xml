<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="mezic.grega.hows_gregamezic">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".WelcomeActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".MainBaseActivity"/>

        <activity android:name=".login.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".shows.ShowActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".shows.ShowDetailActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".episodes.AddEpisodeActivity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait" />
    </application>

</manifest>